import numpy as np
import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation

# Define the function
def ae(t):
    return np.cos(5*t) * np.cos(t)

def y(t):
    return np.cos(5*t) * np.sin(t)

# Create the figure and axis
fig, ax = plt.subplots()
ax.set_xlim(0, 2)
ax.set_ylim(-1, 1)

# Create a line object
line, = ax.plot([], [], lw=2)

# Initialization function
def init():
    line.set_data([], [])
    return line,

# Animation function
def animate(i):
    t = np.linspace(0, 2, 1000)
    x = ae(t)
    y_val = y(t)
    line.set_data(x[:i], y_val[:i])
    return line,

# Create the animation
ani = FuncAnimation(fig, animate, init_func=init, frames=1000, interval=20, blit=True)

# Save the animation as GIF
ani.save('eg1.gif', writer='imagemagick', fps=30)

plt.show()
